<body>
    <pad>
        <vc>
            <formline text="SELINUX">
                <textbox id="status" />
            </formline>
            <formline text="Style">
                <dropdown id="style" />
            </formline>
            <formline>
                <button icon="ok" id="show" text="Change" warning="{The config file has been changed.Reboot the system?}"/>
            </formline>
        </vc>
    </pad>
    <pad>
        <vc id="bindroot">
                <bind:collection bind="data" id="modules">
                    <dt bind="__items" width="400">
                        <dtr header="True">
                            <dth text="module-name" width="250" />
                            <dth text="version" width="150" />
                            <dth text="action" width="100" />
                        </dtr>
                    </dt>

                    <bind:template>
                        <dtr>
                            <dtd><label bind="module" /></dtd>
                            <dtd><label bind="version" /></dtd>
                            <dtd>
                                <hc>
                                    <tooltip text="{Start}">
                                        <button id="start" icon="play" style="mini"  visible="False" />
                                    </tooltip>
                                    <tooltip text="{Stop}">
                                        <button id="stop" icon="stop" style="mini" visible="False" />
                                    </tooltip>
                                </hc>
                            </dtd>
                        </dtr>
                    </bind:template>
                </bind:collection>
        </vc>
    </pad>
</body>